extends layout.pug
block head-content
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.5.1/dist/leaflet.css', integrity='sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==', crossorigin='')
block unique-content
    .container.mb-2.text-center
        h4.display-4.font-weight-bolder.mb-5 Routes for Stop ID: #{stopID}
        .row.justify-content-center.mt-5
            for route in getstops
                - var rte = "map/" +route + "/0"
                a.card.m-2.mt-5(href=''+rte+'' style='width: 12rem; height: 6rem; text-decoration: none !important; font-size:12px; background-color: #fdfeff; color:#525151; box-shadow: 10px 10px 20px -5px rgba(0,0,0,0.15);')
                    .card-body.row.justify-content-center
                        h3.card-title.display-5.p-2(style='text-align: center; color:'+color+'') #{route}

        